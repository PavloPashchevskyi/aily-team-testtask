{% extends 'base.html.twig' %}

{% block body %}
    <h1>Links list</h1>

    <h2>Total links count: {{ paginatedLinks.getTotalItemCount }}</h2>
    <table>
        <thead>
            <tr>
                <th>{{ knp_pagination_sortable(paginatedLinks, 'Id', 'l.id') }}</th>
                <th>{{ knp_pagination_sortable(paginatedLinks, 'Original', 'l.original') }}</th>
                <th>{{ knp_pagination_sortable(paginatedLinks, 'Short', 'l.short') }}</th>
                <th>{{ knp_pagination_sortable(paginatedLinks, 'LifetimeTo', 'l.lifetimeTo') }}</th>
                <th>{{ knp_pagination_sortable(paginatedLinks, 'Active', 'l.active') }}</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for link in paginatedLinks %}
            <tr>
                <td><a href="{{ path('link_show', { 'id': link.id }) }}">{{ link.id }}</a></td>
                <td><a href="{{ link.original }}" target="_blank" data-shortlink="false">{{ link.original }}</a></td>
                <td><a href="{{ link.short }}" data-shortlink="true">{{ link.short }}</a></td>
                <td>{% if link.lifetimeTo %}{{ link.lifetimeTo|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if link.active %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('link_show', { 'id': link.id }) }}">Show link separately</a>
                        </li>
                        <li>
                            <a href="{{ path('link_edit', { 'id': link.id }) }}">Edit link</a>
                        </li>
                        <li>
                            {% include '@App/Link/delete_form.html.twig' with {'link': link} %}
                        </li>
                        <li>
                            <a href="{{ path('followings_log_view_statistics', {'id': link.id}) }}">View statistics</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div>
        {{ knp_pagination_render(paginatedLinks) }}
    </div>

    <ul>
        <li>
            <a href="{{ path('link_new') }}">Create a new link</a>
        </li>
    </ul>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/app/js/addToFollowingsLog.js') }}"></script>
{% endblock %}
